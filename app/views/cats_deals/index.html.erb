<% if @analysed_cats_deals.size > 0 %>
  <p>
    Best price for your location
    - <%= @analysed_cats_deals.first[:price] %>
  </p>

  <table class=" table table-striped">
    <thead>
    <tr>
      <th>Type</th>
      <th>Price</th>
      <th>Location</th>
      <th>Image</th>
    </tr>
    </thead>

    <tbody>
    <% @analysed_cats_deals.each do |cat| %>
      <tr>
        <td><%= cat[:type] %></td>
        <td><%= cat[:price] %></td>
        <td><%= cat[:location] %></td>
        <td><%= image_tag(cat[:image], width: '150px') %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p>
    Sorry, no cats for your location
  </p>
<% end %>
